---
import { menuMain } from "~/data/menus";
const currentYear = new Date().getFullYear();
import { siteName } from "~/data/config";
---

<footer class="bg-brand-brown text-white">
	<div class="container pt-16 pb-8">
		<p class="text-center font-bold text-4xl text-white">DunHayat</p>
		<nav class="flex flex-col sm:flex-row items-center justify-center gap-x-12 gap-y-3 font-medium mt-6" aria-label="Footer">
			{
				menuMain.map((item) => (
					<a href={item.url} class="hover:underline">
						{item.name}
					</a>
				))
			}
		</nav>
		<p class="mt-10 text-center text-sm">&copy; {currentYear} {siteName}. All rights reserved. <a class="underline" href="/privacy-policy">Privacy policy</a></p>
		<a referrerpolicy='origin' target='_blank' href='https://trustseal.enamad.ir/?id=607091&Code=MJPqlCr0ZcM16lmxG9YFOeimEASpcClh'>
			<img referrerpolicy='origin' 
			     src='https://trustseal.enamad.ir/logo.aspx?id=607091&Code=MJPqlCr0ZcM16lmxG9YFOeimEASpcClh' 
				 alt='Enamad' 
				 style='cursor:pointer' >
		</a>
	</div>
</footer>
